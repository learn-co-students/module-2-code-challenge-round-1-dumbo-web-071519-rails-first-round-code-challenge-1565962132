<% if flash[:errors] %>
<% flash[:errors].each do |error| %>
<marquee BGCOLOR=YELLOW><font color="red" size = "5"><%= error %></marquee>
<% end %>
<% end %>

<%= form_for @vendor_sweet do |f| %>
<%= f.label :vendor_id %>
<%= f.collection_select :vendor_id, @vendors, :id, :name %><br>
<%= f.label :sweet_id %>
<%= f.collection_select :sweet_id, @sweets, :id, :name %><br>
<%= f.label :price %>
<%= f.number_field :price %><br>
<%= f.submit %>
<% end %>
