 <h1>Create a Vendor's Sweet</h1>
 
 <% if flash[:errors] %>
    <% flash[:errors].each do |msg| %>
    <li><%= msg %></li>    
    <% end %> 
 <% end %>

<%= form_for(@vendor_sweet) do |f| %>
        <%= f.label :vendor_id %>
        <%= f.collection_select(:vendor_id, @vendors, :id, :name) %>
        <%= f.label :sweet_id %>
        <%= f.collection_select(:sweet_id, @sweets, :id, :name) %>
        <%= f.label :price %>
        <% # used a text_field here in order to have integer error pop up with all other errors %>
        <%= f.text_field :price %>
        <%= f.submit %>
<% end %>
  